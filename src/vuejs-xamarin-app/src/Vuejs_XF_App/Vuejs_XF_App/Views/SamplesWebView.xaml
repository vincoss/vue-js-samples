<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vuejs_XF_App.Views.SamplesWebView"
             Title="WebView Samples">

    <StackLayout>
        <Button x:Name="btnDefaultVueJs" Text="Default Vue.js sample" Clicked="btnDefaultVueJs_Clicked"/>
        <Button x:Name="btSample" Text="Log error to server" Clicked="btSample_Clicked"/>
        <WebView x:Name="webViewHtmlString" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                 HeightRequest="1000" WidthRequest="1000"/>
        <Label x:Name="lblError"/>
    </StackLayout>
    
</ContentPage>