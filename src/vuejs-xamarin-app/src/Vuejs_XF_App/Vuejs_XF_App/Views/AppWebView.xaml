<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vuejs_XF_App.Views.AppWebView">

    <StackLayout>
        <Label Text="Html local file string"/>
        <Button x:Name="bntCalculate" Text="Calculate" Clicked="bntCalculate_Clicked"/>
        <WebView x:Name="webViewHtmlString" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                 HeightRequest="1000" WidthRequest="1000"/>
        <Label x:Name="lblError"/>
    </StackLayout>
</ContentPage>